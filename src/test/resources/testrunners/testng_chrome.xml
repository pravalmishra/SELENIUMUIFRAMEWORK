<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" verbose="3" thread-count="6" parallel="tests">


	<test name="Login Page Test">
	<parameter name="browser" value="chrome"/>
       <classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>


	<test name="Accounts Page Test">
	<parameter name="browser" value="chrome"/>
       <classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="Search Results Page Test">
	<parameter name="browser" value="chrome"/>
       <classes>
			<class name="com.qa.opencart.tests.SearchResultsTest" />
		</classes>
	</test>

	<test name="Product Info Page Test">
	<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.ProductPageInfoTest" />
		</classes>
	</test>
	
	<test name="Add To Cart Page Test">
	<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.AddToCartPageTest" />
		</classes>
	</test>

	<test name="Register Page Test">
	<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.RegPageTest" />
		</classes>
	</test>

</suite>
